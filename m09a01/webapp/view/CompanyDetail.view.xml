<mvc:View
    controllerName="moovi.m09a01.controller.CompanyDetail"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    busyIndicatorDelay="0" >

    <Page 
        id="companyDetailPage"
        title="{i18n>CompanyDetailOf} {Carrname}"
        showNavButton="true"
        navButtonPress="onNavBack"
        class="sapUiResponsiveContentPadding">
        <content>
            <Panel 
                id="companyDetailPanel"
                width="auto"
                class="sapUiResponsiveMargin sapUiNoContentPadding">
                <headerToolbar>
                    <Toolbar>
                        <Title text="{i18n>CompanyID} {Carrid}" level="H2" />
                        <ToolbarSpacer />
                    </Toolbar>
                </headerToolbar>
                <content>
                    <f:SimpleForm 
                        id="formEdit"
                        minWidth="1024"
                        editable="false"
                        layout="ResponsiveGridLayout"
                        labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4"
                        columnsL="1" columnsM="1">
                        <f:content>
                            <Label text="{i18n>CompanyID}" />
                            <Input type="Text" value="{Carrid}" />

                            <Label text="{i18n>CompanyName}" />
                            <Input type="Text" value="{Carrname}" />

                            <Label text="{i18n>CurrCode}" />
                            <Input type="Text" value="{Currcode}" />

                            <Label text="{i18n>Url}" />
                            <Input type="Text" value="{Url}" />
                        </f:content>
                    </f:SimpleForm>
                </content>
            </Panel>
        </content>    
    </Page>
</mvc:View>